{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib/typescript",
    "noEmit": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/node_modules",
    "**/Pods",
    "lib",
    "example",
    "**/__tests__",
    "**/__fixtures__",
    "**/__mocks__",
    "App.tsx"
  ]
}
