{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "App.tsx"],
  "exclude": ["**/node_modules", "**/Pods", "lib", "example"]
}
